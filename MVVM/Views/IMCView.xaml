<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CalculadoraIMC.MVVM.Views.IMCView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="IMCView">
    <ScrollView>
        <ScrollView.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Offset="0.0" Color="#0fa3b1" />
                <GradientStop Offset="1" Color="#b5e2fa" />
            </LinearGradientBrush>
        </ScrollView.Background>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <!--#region Height-->
            <Frame>
                <VerticalStackLayout>
                    <Label
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="Altura (cm)"
                        TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>


            <!--#endregion-->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>